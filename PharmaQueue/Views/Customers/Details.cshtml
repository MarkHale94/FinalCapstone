@model PharmaQueue.Models.CustomerViewModels.CustomerDetailViewModel

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Customer</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Name
        </dt>
        <dd>
            @Html.DisplayFor(model => model.FirstName)
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt>
            Prescriptions
        </dt>
        @foreach (var item in Model.Prescriptions)

        {
        <dd>
            Medication: @Html.DisplayFor(modelItem => item.Name)
            @Html.DisplayFor(modelItem => item.Strength)
            #@Html.DisplayFor(modelItem => item.Quantity)
            @if (item.StatusId != 4)
            {
                <a asp-controller="Prescriptions" asp-action="Edit" asp-route-id="@item.PrescriptionId">Edit</a>
            }
            @if (item.StatusId == 1)
            {
                <form asp-controller="Prescriptions" asp-action="Delete" asp-route-id="@item.PrescriptionId">
                    <input type="submit" class="btn btn-danger btn-sm" value="Delete" />
                </form>
            }
        </dd>
        }
    </dl>
    <a asp-controller="Prescriptions" asp-action="Create" asp-route-id="@Model.UserId">Add a Prescription</a>
</div>
