@model PharmaQueue.Models.PrescriptionViewModels.PrescriptionIndexViewModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Strength
            </th>
            <th>
                Quantity
            </th>
            <th>
                Refills
            </th>
            <th>
                Price
            </th>
            <th>
                Status
            </th>
            <th>
                DateCreated
            </th>
            <th>Name</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Prescriptions) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Strength)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Refills)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            @if (item.StatusId <= 4 && item.IsSold == false)
            {
            <td>
                @Html.DisplayFor(modelItem => item.Status.QueueStatus)
            </td>
            }
            @if (item.StatusId == 4 && item.IsSold == true)
            {
            <td>
                Sold
            </td>
            }
            <td>
                @Html.DisplayFor(modelItem => item.DateCreated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.FirstName)
                @Html.DisplayFor(modelItem => item.User.LastName)
            </td>
            <td>
                <a class="btn btn-xs btn-danger" asp-action="Details" asp-route-id="@item.PrescriptionId">Detials</a>
                @if (item.StatusId != 4 && Model.CurrentUserTypeId == 1)
                {
                    <a class="btn btn-xs btn-danger" asp-action="Edit" asp-route-id="@item.PrescriptionId">Edit</a>
                }
                @if (item.StatusId == 1 && Model.CurrentUserTypeId == 1)
                {
                    <form asp-controller="Prescriptions" asp-action="Delete" asp-route-id="@item.PrescriptionId">
                        <input type="submit" class="btn btn-danger btn-xs" value="Delete" />
                    </form>
                }
            </td>
        </tr>
}
    </tbody>
</table>
