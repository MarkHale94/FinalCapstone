@model PharmaQueue.Models.Prescription

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Prescription</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.User.FirstName)
            @Html.DisplayFor(model => model.User.LastName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.DateCreated)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DateCreated)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        @if (Model.StatusId <= 4 && Model.IsSold == false)
        {
            <dd>
                @Html.DisplayFor(model => model.Status.QueueStatus)
            </dd>
        }
        @if (Model.StatusId == 4 && Model.IsSold == true)
        {
            <dd>
                Sold
            </dd>
        }
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Strength)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Strength)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Refills)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Refills)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>

    </dl>
</div>
<div>
    <a class="btn btn-danger btn-xs" asp-action="Edit" asp-route-id="@Model.PrescriptionId">Edit</a> |
    @if (Model.StatusId < 4)
    {
        <form asp-controller="Prescriptions" asp-action="Update" asp-route-id="@Model.PrescriptionId">
            <input type="submit" class="btn btn-danger btn-xs" value="Update" /> |
        </form>
    }
    @if (Model.StatusId == 4 && Model.IsSold == false)
    {
        <form asp-controller="Prescriptions" asp-action="Sell" asp-route-id="@Model.PrescriptionId">
            <input type="submit" class="btn btn-danger btn-xs" value="Sell" /> |
        </form>
    }
    <a class="btn btn-danger btn-xs" asp-action="Index">Back to List</a>
</div>
