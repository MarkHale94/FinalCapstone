@model PharmaQueue.Models.PrescriptionViewModels.PrescriptionEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Prescription</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.Prescription.PrescriptionId" />
            <input type="hidden" asp-for="@Model.Prescription.User" />
            <input type="hidden" asp-for="@Model.Prescription.UserId" />
            <input type="hidden" asp-for="@Model.Prescription.Status" />
            <input type="hidden" asp-for="@Model.Prescription.StatusId" />
            @if (Model.Prescription.StatusId <= 2)
            {
                <div class="form-group">
                    <label asp-for="Prescription.Name" class="control-label"></label>
                    <input asp-for="Prescription.Name" class="form-control" />
                    <span asp-validation-for="Prescription.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Prescription.Strength" class="control-label"></label>
                    <input asp-for="Prescription.Strength" class="form-control" />
                    <span asp-validation-for="Prescription.Strength" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Prescription.Quantity" class="control-label"></label>
                    <input asp-for="Prescription.Quantity" class="form-control" />
                    <span asp-validation-for="Prescription.Quantity" class="text-danger"></span>
                </div>
            }
            @if (Model.Prescription.StatusId > 2)
            {
                <input type="hidden" asp-for="@Model.Prescription.Name" />
                <input type="hidden" asp-for="@Model.Prescription.Strength" />
                <input type="hidden" asp-for="@Model.Prescription.Refills" />
                <input type="hidden" asp-for="@Model.Prescription.Price" />
                <div class="form-group">
                    <label asp-for="Prescription.Quantity" class="control-label"></label>
                    <input asp-for="Prescription.Quantity" class="form-control" />
                    <span asp-validation-for="Prescription.Quantity" class="text-danger"></span>
                </div>
            }
            @if (Model.Prescription.StatusId <= 2)
            {
                <div class="form-group">
                    <label asp-for="Prescription.Refills" class="control-label"></label>
                    <input asp-for="Prescription.Refills" class="form-control" />
                    <span asp-validation-for="Prescription.Refills" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Prescription.Price" class="control-label"></label>
                    <input asp-for="Prescription.Price" class="form-control" />
                    <span asp-validation-for="Prescription.Price" class="text-danger"></span>
                </div>
            }
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-danger btn-xs" asp-controller="Prescriptions" asp-action="Details" asp-route-id="@Model.Prescription.PrescriptionId">Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script src="~/lib/signalr/dist/browser/signalr.js"></script>