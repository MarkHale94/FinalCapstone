@model PharmaQueue.Models.HomeViewModel.HomeIndexViewModel


@{
    ViewData["Title"] = "Home Page";
}
<input id="hiddenId" type="hidden" value="@Model.UserId"/>
<div id="tableDiv" class="container-fluid">
    <h2>Welcome to PharmaQueue!</h2>
    @if (Model.UserTypeId == 1)
    {
        <form asp-controller="Customers" asp-action="Search" method="get" class="nav-search">
            <input type="text" name="search" class="input-sm" placeholder="Search By Last Name" />
        </form>
        <br>
    }
    @if (Model.SoldPrescriptions.Count > 0)
    {
        <a class="btn btn-xs btn-info" asp-controller="Prescriptions" asp-action="Sold" style="float:left">Sold</a>
        <br>
        <br>
    }
    <table class="table-bordered" style="width:25%; float:left; border-color:black;">
        <tr>
            <th>Entered</th>
        </tr>
        @if (Model.EnteredPrescriptions.Count() > 0)
        {
            @foreach (var item in Model.EnteredPrescriptions)
            {
                <tr>
                    <td>
                        <a class="linkToBold category-title" asp-controller="Prescriptions" asp-action="Details" asp-route-id="@item.PrescriptionId">
                            @item.Name
                            @item.Strength
                        </a>
                    </td>
                </tr>
            }
        }

    </table>
    <table class="table-bordered" style="width:25%; float:left">
        <tr>
            <th>Reviewed</th>
        </tr>
        @if (Model.ReviewedPrescriptions.Count() > 0)
        {
            @foreach (var item in Model.ReviewedPrescriptions)
            {
                <tr>
                    <td>
                        <a class="linkToBold category-title" asp-controller="Prescriptions" asp-action="Details" asp-route-id="@item.PrescriptionId" >
                            @item.Name
                            @item.Strength
                        </a>
                    </td>
                </tr>

            }
        }

    </table>
    <table class="table-bordered" style="width:25%; float:left">
        <tr>
            <th>Filled</th>
        </tr>
        @if (Model.FilledPrescriptions.Count() > 0)
        {
            @foreach (var item in Model.FilledPrescriptions)
            {
                <tr>
                    <td>
                        <a class="linkToBold category-title" asp-controller="Prescriptions" asp-action="Details" asp-route-id="@item.PrescriptionId">
                            @item.Name
                            @item.Strength
                        </a>
                    </td>
                </tr>
            }
        }

    </table>
    <table class="table-bordered" style="width:25%; float:left">
        <tr>
            <th>Ready</th>
        </tr>
        @if (Model.ReadyPrescriptions.Count() > 0)
        {
            @foreach (var item in Model.ReadyPrescriptions)
            {
                <tr>
                    <td>
                        <a asp-controller="Prescriptions" asp-action="Details" asp-route-id="@item.PrescriptionId" class=" linkToBold category-title">
                            @item.Name
                            @item.Strength
                        </a>
                    </td>
                </tr>
            }
        }

    </table>
</div>
    <script src="~/lib/signalr/dist/browser/signalr.js"></script>
    <script src="~/js/status.js"></script>